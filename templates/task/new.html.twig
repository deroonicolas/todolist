{% extends 'base.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}

{% block content %}

  <div class="d-flex flex-column align-items-center justify-content-center">

    <h1 class="mt-3">Nouvelle tâche</h1>

    {{ form_errors(form) }}
    
    {{ form_start(form) }}

      {{ form_row(form.title) }}
      {{ form_row(form.content) }}
      {{ form_row(form.skill) }}

      {{ include('task/_form.html.twig') }}

    {{ form_end(form) }}

    <a class="mt-3" href="{{ path('app_task_index') }}">Retour à la liste des tâches</a>

  </div>

{% endblock %}
