{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

<div class="container d-flex flex-column align-items-center justify-content-center">

  <form method="post">
      {% if error %}
          <div class="alert alert-danger mt-2">Email ou mot de passe incorrect</div>
      {% endif %}

      {% if app.user %}
          <div class="mb-3">
              Vous êtes connecté sous {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
          </div>
      {% endif %}

      <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>

      <label for="inputEmail">Email *</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
      
      <label class="mt-2" for="inputPassword">Mot de passe *</label>
      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

      <button class="btn btn-lg btn-primary mt-3" type="submit">Se connecter</button>
  </form>

</div>

{% endblock %}
